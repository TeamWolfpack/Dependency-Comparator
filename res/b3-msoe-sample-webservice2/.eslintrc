{
    "rules": {
        "indent": [
            0,
            "tab"
        ],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "block-scoped-var" : 2,
        "complexity" : [2, 10],
        "curly" : 2,
        "default-case" : 2,
        "dot-notation" : 2,
        "eqeqeq" : 2,
        "max-depth" : [2, 5],
        "max-params" : [2, 10],
        "max-statements" : [2, 50],
        "no-extend-native" : 2,
        "no-new" : 2,
        "no-shadow" : 2,
        "yoda" : 2
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha" : true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint"
}